<div class="valign-wrapper fixed-navbar" style="margin-bottom: 20vh; display: none;" id="fixedBookingRow">
  <div class="row bookRow">
    <form class="col m12">
      <div class="row bookRowInside">
        <div class="input-field col s12 m4 mobileAndWidthSmallHide">
          <i class="material-icons prefix" for="arrival">date_range</i>
          <input id ="arrival" type="text" class="datepicker">
          <label for="arrival">Data de chegada</label>
        </div>
        <div class="input-field col s12 m4 mobileAndWidthSmallHide">
          <i class="material-icons prefix" for="arrival">date_range</i>
          <input id="departure" type="text" class="datepicker">
          <label for="departure">Data de partida</label>
        </div>
        <div class="col s12 m3 center-align">
          <a style="cursor: pointer;" id="booking" class="btn btn-large waves-effect waves-light amber modal-trigger">reservar</a>
        </div>
        <%= render 'partials/errors' %>
      </div>
    </form>
  </div>
</div>
